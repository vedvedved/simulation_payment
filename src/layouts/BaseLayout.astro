---
const {
  title = "Payment Simulation UI",
  headerTitle = null,
  headerSub = null,
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <main class="page">
      <div class="card">
        {headerTitle ? (
          <header class="checkout-header">
            <h1 class="checkout-title">{headerTitle}</h1>
            {headerSub ? <p class="checkout-sub">{headerSub}</p> : null}
          </header>
        ) : null}
        <hr class="checkout-sep" />
        <slot />
      </div>
    </main>
  </body>
</html>
